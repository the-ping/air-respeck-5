<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalGauge">
        // Nothing for now
    </declare-styleable>

    <declare-styleable name="CircularGauge">
        <attr name="cg_animated" format="boolean"/>
        <attr name="cg_shadowed" format="boolean"/>
        <attr name="cg_rounded" format="boolean"/>
        <attr name="cg_dragged" format="boolean"/>

        <attr name="cg_typeface" format="string"/>
        <attr name="cg_text_color" format="color"/>

        <attr name="cg_shadow_distance" format="dimension"/>
        <attr name="cg_shadow_angle" format="integer"/>
        <attr name="cg_shadow_radius" format="dimension"/>
        <attr name="cg_shadow_color" format="color"/>

        <attr name="cg_animation_duration" format="integer"/>
        <attr name="cg_interpolator" format="reference"/>

        <attr name="cg_draw_width" format="fraction|dimension"/>
        <attr name="cg_model_offset" format="dimension"/>
        <attr name="cg_model_bg_enabled" format="boolean"/>

        <attr name="cg_start_angle" format="integer"/>
        <attr name="cg_sweep_angle" format="integer"/>
        <attr name="cg_indicator_orientation" format="enum">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>

        <attr name="cg_preview_colors" format="reference"/>
        <attr name="cg_preview_bg" format="color"/>
    </declare-styleable>
</resources>