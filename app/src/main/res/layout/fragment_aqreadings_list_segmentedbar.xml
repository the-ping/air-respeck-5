        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context=".fragments.SupervisedAirspeckReadingsFragment"
        tools:listitem="@layout/list_item_segmentedbar"/>

    <include layout="@layout/content_connecting"/>

</RelativeLayout>