<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ComfortHomeFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/comfort_respeck"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/vec_respeck"
        android:layout_marginTop="100dp">

    </ImageView>

    <LinearLayout
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/comfort_respeck"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/upload_layout"
        android:layout_weight="1"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="@color/md_green_300"
        android:layout_marginLeft="3dp"
        >

        <Button
            android:layout_weight="1"
            android:id="@+id/comfort_pauseplay_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:textSize="@dimen/font_size_older_title"
            android:textColor="@drawable/text_color_change"
            android:text="Pause"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>