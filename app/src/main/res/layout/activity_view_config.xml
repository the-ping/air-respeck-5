<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
        android:id="@+id/androidIDtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/place_autocomplete_button_padding"
        android:text="Phone ID: "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <android.widget.ListView
        android:id="@+id/list_view_config_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        tools:context=".activities.ConfigViewActivity"
        tools:listitem="@layout/list_item_config_view"/>

</LinearLayout>