<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1"
              android:gravity="center_horizontal">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vec_diary"
        android:id="@+id/imageButton"
        android:layout_weight="0.17"
        android:background="@drawable/background_rounded_orange"
        android:layout_marginBottom="20dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/background_rounded_lightgrey"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_weight="0.30"
                app:srcCompat="@drawable/vec_respeck"/>

            <ImageView
                android:id="@+id/icon_connected_respeck"
                android:layout_width="wrap_content"
                android:layout_weight="0.30"
                app:srcCompat="@drawable/vec_wireless"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/icon_disconnected_respeck"
                android:layout_height="match_parent"
                android:layout_weight="0.44"
                app:srcCompat="@drawable/vec_xmark"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_weight="0.35"
                app:srcCompat="@drawable/vec_airspeck"/>

            <ImageView
                android:id="@+id/icon_connected_airspeck"
                android:layout_width="wrap_content"
                android:layout_weight="0.30"
                app:srcCompat="@drawable/vec_wireless"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/icon_disconnected_airspeck"
                android:layout_height="match_parent"
                android:layout_weight="0.44"
                app:srcCompat="@drawable/vec_xmark"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/battImageView"
            android:layout_width="@dimen/button_and_battery_height"
            android:layout_height="@dimen/button_and_battery_height"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="-10dp"
            android:layout_weight="0.04"
            android:rotation="0"
            android:src="@drawable/vec_battery"/>

        <ProgressBar
            android:id="@+id/batteryProgressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.91"
            android:indeterminate="true"/>

    </LinearLayout>

</LinearLayout>