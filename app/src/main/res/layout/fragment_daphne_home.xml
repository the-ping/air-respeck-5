<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.DaphneHomeFragment"
             android:paddingTop="20dp"
             android:paddingRight="20dp"
             android:paddingLeft="20dp"
             android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/imageButton"
            app:srcCompat="@drawable/vec_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.17"
            android:background="@drawable/background_rounded_orange"
            android:padding="15dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_rounded_lightgrey"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/imageView"
                    app:srcCompat="@drawable/vec_respeck"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.30"/>

                <ImageView
                    android:id="@+id/connected_status_respeck"
                    app:srcCompat="@drawable/vec_xmark"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_weight="0.44"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imageView3"
                    app:srcCompat="@drawable/vec_airspeck"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.35"/>

                <ImageView
                    android:id="@+id/connected_status_airspeck"
                    app:srcCompat="@drawable/vec_xmark"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_weight="0.44"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"/>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/battImageView"
                android:layout_width="@dimen/button_and_battery_height"
                android:layout_height="@dimen/button_and_battery_height"
                android:layout_marginBottom="-10dp"
                android:layout_marginTop="-10dp"
                android:layout_weight="0.04"
                android:rotation="0"
                android:src="@drawable/vec_battery"/>

            <ProgressBar
                android:id="@+id/batteryProgressBar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.91"
                android:indeterminate="true"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>