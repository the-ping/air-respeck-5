            <TextView
                android:id="@+id/count_up_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00:00"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/record_layout"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_button"
                        android:layout_marginRight="3dp">

                        <ImageView
                            android:id="@+id/record_imagebutton"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginRight="2dp"
                            android:layout_gravity="center|center_vertical"
                            android:src="@drawable/ic_fiber_manual_record_red_24dp"
                            />

                        <ImageView
                            android:id="@+id/stop_imagebutton"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginRight="2dp"
                            android:layout_gravity="center|center_vertical"
                            android:src="@drawable/ic_fiber_manual_record_red_24dp"
                            android:visibility="gone"
                            />

                        <Button
                            android:id="@+id/record_button"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="2dp"
                            android:text="@string/button_text_start_recording"
                            android:textColor="@drawable/text_color_change"
                            android:background="#00FFFFFF"
                            >

                        </Button>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cancel_layout"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/background_rounded_white_lined"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        >


                        <ImageView
                            android:id="@+id/cancel_imagebutton"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginRight="2dp"
                            android:layout_gravity="center|center_vertical"
                            android:src="@drawable/ic_baseline_delete_clicked"
                            />
<!--                        mCancelButton.setTextColor(0x065A61);-->

                        <Button
                            android:id="@+id/cancel_button"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:textColor="@drawable/text_color_change"
                            android:background="@null"
                            android:paddingLeft="2dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textSize="13dip"
                            android:text="@string/button_text_cancel_recording"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/upload_layout"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_button"
                        android:layout_marginLeft="3dp"
