                android:text="Choose ONE activity"
                android:textStyle="bold"
                android:background="@color/colorSecondaryLight"/>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sitting while:"
                    android:textSize="@dimen/actlogging_subheadings_tsize">

                </TextView>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/sitbreathe_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breathing"
                            android:textSize="@dimen/actlogging_buttons_tsize"
                            android:layout_margin="5dp"
                            android:checked="true"
                            >

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/sitbreathedeep_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breathing deeply"
                            android:layout_toRightOf="@+id/sitbreathe_rad"
                            android:textSize="@dimen/actlogging_buttons_tsize"
                            android:layout_margin="5dp">

                        </RadioButton>



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/sitcough_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coughing"
                            android:layout_margin="5dp"
                            android:textSize="@dimen/actlogging_buttons_tsize">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/sithyper_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hyperventilating"
                            android:layout_toRightOf="@+id/sitcough_rad"
                            android:textSize="@dimen/actlogging_buttons_tsize"
                            android:layout_margin="5dp">
                        </RadioButton>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/sitfrontback_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Swinging front to back"
                            android:layout_margin="5dp"
                            android:textSize="@dimen/actlogging_buttons_tsize">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/sittalk_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Talking"
                            android:layout_toRightOf="@+id/sitfrontback_rad"
                            android:layout_margin="5dp"
                            android:textSize="@dimen/actlogging_buttons_tsize">

                        </RadioButton>





                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lying while:"
                        android:textSize="@dimen/actlogging_subheadings_tsize">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/liebreathe_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breathing"
                            android:layout_margin="5dp"
                            android:textSize="@dimen/actlogging_buttons_tsize">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/liecough_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coughing"
                            android:layout_toRightOf="@+id/liebreathe_rad"
                            android:layout_margin="5dp"
                            android:textSize="@dimen/actlogging_buttons_tsize">

                        </RadioButton>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Walking pace"
                        android:textSize="@dimen/actlogging_subheadings_tsize">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/walknormal_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Normal"
                            android:layout_margin="5dp"
                            android:textSize="@dimen/actlogging_buttons_tsize">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/walkslow_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Slow"
                            android:textSize="@dimen/actlogging_buttons_tsize"
                            android:layout_toRightOf="@+id/walknormal_rad"
                            android:layout_margin="5dp">

                        </RadioButton>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Others:"
                        android:textSize="@dimen/actlogging_subheadings_tsize">


                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/movesudden_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sudden movement"
                            android:textSize="@dimen/actlogging_buttons_tsize"
                            android:layout_margin="5dp">

                        </RadioButton>

                    </RelativeLayout>

                </RadioGroup>



