<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingBottom="10dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:paddingTop="20dp"
             tools:context=".fragments.SubjectValuesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sensor_container"
            android:background="@drawable/background_rounded_lightgrey"
            android:padding="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/respeck_connection_container"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/respeck_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/clickable_button_background"
                    android:padding="15dp"
                    android:src="@drawable/ic_pause_black_24dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:foregroundGravity="center"
                    app:srcCompat="@drawable/vec_respeck"/>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ProgressBar
                        android:id="@+id/progress_bar_respeck"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        />

                    <ImageView
                        android:id="@+id/connected_status_respeck"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/vec_wireless_active"/>

                    <ImageView
                        android:id="@+id/not_enabled_respeck"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/vec_xmark"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="fill_vertical|center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textSize="15sp"
                            android:text="92%"/>

                        <ImageView
                            android:id="@+id/battery_image"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/vec_battery"
                            android:layout_weight="1"/>

                    </LinearLayout>


<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="92%"/>-->

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/airspeck_connection_container"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="40dp">

                <ImageButton
                    android:id="@+id/airspeck_off_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/clickable_button_background"
                    android:padding="15dp"
                    android:src="@drawable/ic_power_settings_new_black_24dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_airspeck_new"/>

                <ProgressBar
                    android:id="@+id/progress_bar_airspeck"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/connected_status_airspeck"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/vec_wireless_active"/>

                <ImageView
                    android:id="@+id/not_enabled_airspeck"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/vec_xmark"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttons_container"
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageButton
                android:id="@+id/diary_button"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/clickable_button_background"
                android:padding="15dp"
                app:srcCompat="@drawable/vec_diary"/>

            <ImageButton
                android:id="@+id/rehab_button"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/clickable_button_background"
                android:padding="15dp"
                android:visibility="gone"
                app:srcCompat="@drawable/vec_lungs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/media_buttons_container"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/camera_button"
                    android:layout_width="0dip"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/clickable_button_background"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/vec_camera"/>

                <ImageButton
                    android:id="@+id/video_button"
                    android:layout_width="0dip"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/clickable_button_background"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/vec_video"/>

                <ImageButton
                    android:id="@+id/audio_button"
                    android:layout_width="0dip"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/clickable_button_background"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/vec_microphone"/>

                <ImageButton
                    android:id="@+id/text_button"
                    android:layout_width="0dip"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/clickable_button_background"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/vec_comment"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>